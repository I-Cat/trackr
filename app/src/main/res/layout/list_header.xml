<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="headerData"
            type="com.example.android.trackr.ui.tasks.HeaderData" />

        <variable
            name="listener"
            type="com.example.android.trackr.ui.tasks.TasksAdapter.ItemListener" />

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{() -> listener.onHeaderClicked(headerData)}">

        <LinearLayout
            android:id="@+id/header_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="?android:attr/windowBackground"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:id="@+id/expand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:importantForAccessibility="no"
                android:paddingStart="@dimen/drawable_padding"
                android:paddingEnd="@dimen/drawable_padding"
                android:src="@{headerData.expanded ? @drawable/ic_expand_more : @drawable/ic_expand_less}" />

            <TextView
                style="@style/HomeSectionHeaderText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{headerData.label(context)}" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>