<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="taskListItem"
            type="com.example.android.trackr.data.TaskListItem" />

        <variable
            name="listener"
            type="com.example.android.trackr.ui.tasks.TasksAdapter.TaskItemListener" />

        <variable
            name="clock"
            type="org.threeten.bp.Clock" />

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:onClick="@{() -> listener.onItemClicked(taskListItem)}">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:padding="16dp">

            <CheckBox
                android:id="@+id/star"
                android:layout_width="@dimen/home_task_star_size"
                android:layout_height="@dimen/home_task_star_size"
                android:background="@drawable/selector_star"
                android:button="@null"
                android:contentDescription="@string/star"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/home_task_star_detail_margin"
                android:layout_marginLeft="@dimen/home_task_star_detail_margin"
                android:text="@{taskListItem.title}"
                android:textAppearance="?attr/textAppearanceHeadline2"
                app:layout_constraintBottom_toTopOf="@id/owner"
                app:layout_constraintStart_toEndOf="@+id/star"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Task 1" />

            <TextView
                android:id="@+id/owner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/home_task_star_detail_margin"
                android:layout_marginLeft="@dimen/home_task_star_detail_margin"
                android:text="@{@string/user(taskListItem.owner.username)}"
                android:textAppearance="?attr/textAppearanceBody1"
                app:layout_constraintBottom_toTopOf="@id/due_date"
                app:layout_constraintStart_toEndOf="@+id/star"
                app:layout_constraintTop_toBottomOf="@id/title"
                tools:text="Owner: Peaceful Puffin" />

            <TextView
                android:id="@+id/due_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/home_task_star_detail_margin"
                android:layout_marginLeft="@dimen/home_task_star_detail_margin"
                android:textAppearance="?attr/textAppearanceBody1"
                app:clock="@{clock}"
                app:dueDate="@{taskListItem.dueAt}"
                app:layout_constraintBottom_toTopOf="@id/chip_group"
                app:layout_constraintStart_toEndOf="@+id/star"
                app:layout_constraintTop_toBottomOf="@id/owner"
                tools:text="Due next Monday" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/home_task_star_detail_margin"
                android:layout_marginLeft="@dimen/home_task_star_detail_margin"
                app:showAllTags="@{false}"
                app:layout_constraintBottom_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/star"
                app:layout_constraintTop_toBottomOf="@id/due_date"
                app:tags="@{taskListItem.tags}">

                <include layout="@layout/tag" />

                <include layout="@layout/tag" />

                <include layout="@layout/tag" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/chip_height"
                    android:gravity="center_vertical"
                    tools:text="+2 more tags" />

            </com.google.android.material.chip.ChipGroup>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</layout>